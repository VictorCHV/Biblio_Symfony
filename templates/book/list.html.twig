{% extends 'base.html.twig' %}

{% block title %}Page Liste des livres{% endblock %}

{% block body %}
    <h1>Liste des livres </h1>
    <nav>
    <a href="{{ path('app_book_create') }}"> Ajouter un livre</a>
    </nav>

    {% for book in books %}
        <div>
            <h2> Titre : {{ book.title }} </h2>        
            <p> Prix : {{ book.price }} € </p>

            <p>{{ book.description }}</p>

            {% if book.imageUrl %}
            <p>              
            <img src="{{ book.imageUrl }}" alt="{{ book.title }}" />
            {% endif %}
            </p>

            <h4> Auteur : {{ book.author.name }} </h4>

            {% for category in book.categories %}
            <h5> Catégorie : {{ category.name }} </h5>
            {% endfor %}
            

            <a href="{{ path('app_book_remove' , {id: book.id})}}"> Supprimer</a>
            <a href="{{ path('app_book_update' , {id: book.id})}}"> Modifier</a>
        </div>
    {% endfor %}
{% endblock %}